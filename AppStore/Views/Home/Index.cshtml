@model IEnumerable<AppStore.Models.Product>

@{
    ViewBag.Title = "Index";
}
    <p>
        @Html.ActionLink("Контроллер ProductsController", "Index", "Products")
    </p>

<h2>Список товаров с указанием сотрудника, ответственного за выдачу товара</h2>

<p>
    @Html.ActionLink("Добавить новый товар", "Create") 
</p>

<p>
    @Html.ActionLink("Пагинация", "PageView")
</p>
<p>
    @Html.ActionLink("Фильтрация", "FilterView")
</p>
<p>
    @Html.ActionLink("Получить первый товар в списке", "FirstProduct")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.Phone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ProductName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Category)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Employee.Surname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Employee.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Employee.Phone)
    </td>
    <td>
        @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
        @Html.ActionLink("О товаре", "Details", new { id = item.Id }) |
        @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
