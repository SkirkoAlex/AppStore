@model AppStore.Models.ProductFilterList

@{
    ViewBag.Title = "FilterView";
}

  <h2>Список товаров с указанием сотрудника, ответственного за выдачу товара</h2>

<p>
    @Html.ActionLink("Добавить новый товар", "Create")
</p>
<form method="get">
    <div>
        <label>Сотрудник</label>
        @Html.DropDownList("employeeId", Model.Employees as SelectList)
    <input type="submit" value="Фильтр"  />
    </div>

</form>
<table class="table">
    <tr>
        <th>
            Название товара
        </th>
        <th>
            Категория
        </th>
        <th>
            Стоимость
        </th>
        <th>
            Описание
        </th>
        <th>
            Фамилия сотрудника
        </th>
        <th>
            Имя сотрудника
        </th>
        <th>
            Телефон сотрудника
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Products)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Phone)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                @Html.ActionLink("О товаре", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
